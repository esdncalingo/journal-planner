<span class="text-slate-200" ><%=item.id%></span>
<span class="break-all text-slate-200"><%=item.title%></span>
<span class="break-all text-slate-200"><%=item.deadline%></span>
<span class="break-all text-slate-200"><%=item.status%></span>
<span class="flex gap-2 justify-center">
    <%=link_to "Show", show_tasks_categories_path(:tid => item.id, :id => params[:id]), class: "text-green-600"%>
    <%=link_to "Edit", edit_tasks_categories_path(:tid => item.id, :id => params[:id]),class: "text-blue-600"%>
    <%=button_to "Delete", delete_tasks_categories_path(:tid => item.id, :id => params[:id] ), method: :delete, class: "text-red-600"%>
</span>