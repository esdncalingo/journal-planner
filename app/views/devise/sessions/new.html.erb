<div class="flex flex-col">
  <span class=" text-2xl font-bold">Log in</span>
  <div class="p-4 rounded-3xl border-2 w-[300px] h-[300px] bg-slate-500 drop-shadow-md">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "flex flex-col gap-2"}) do |f| %>
      <div class="field">
        <%= f.label :email, class: "text-slate-50" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md w-[260px]" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "text-slate-50" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "rounded-md w-[260px]" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "text-slate-50" %>
        </div>
      <% end %>

      <div class="actions self-center">
        <%= f.submit "Log in", {class: "navbar-list h-[40px] w-[120px] bg-slate-200 rounded-lg ring-2  ring-amber-500 ring-offset-2 hover:ring-4"} %>
      </div>

  <% end %>
  
  <%= render "devise/shared/links" %>
  </div>
  
</div>


