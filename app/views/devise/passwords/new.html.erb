<h2 class="text-slate-200 text-3xl font-bold self-center mb-4">Forgot your password?</h2>

<div class="flex flex-col justify-center items-center gap-4 p-4 rounded-3xl border-2 w-[300px] bg-slate-500 drop-shadow-md">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "text-slate-50" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md w-[100%]" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "text-blue-800 underline hover:text-blue-300 cursor-pointer" %>
    </div>
  <% end %>
  
  <div class="flex gap-2 justify-end w-[100%]">
    <%= render "devise/shared/links" %>
  </div>
</div>


