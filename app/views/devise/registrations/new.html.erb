<h2 class="text-slate-200 text-3xl font-bold self-center mb-4">Sign up</h2>

<div class="flex flex-col justify-center items-center gap-4 p-4 rounded-3xl border-2 w-[300px] bg-slate-500 drop-shadow-md">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "flex flex-col gap-2"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "text-slate-50" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md w-[260px]" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "text-slate-50" %>
      <% if @minimum_password_length %>
      <em class="text-slate-50">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded-md w-[260px]" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "text-slate-50" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-md w-[260px]" %>
    </div>

    <div class="actions mt-4 self-center">
      <%= f.submit "Sign up", {class: "navbar-list h-[40px] w-[120px] bg-slate-200 rounded-lg ring-2  ring-amber-500 ring-offset-2 hover:ring-4"} %>
    </div>
  <% end %>

  <div>
    <%= render "devise/shared/links" %>
  </div>
</div>

